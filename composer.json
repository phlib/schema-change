{
    "name": "phlib/schema-change",
    "description": "Library for performing MySQL DDL operations, using either simple SQL or Percona Tools Online Schema Change",
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Martin Price"
        },
        {
            "name": "Phlib Team",
            "homepage": "https://github.com/phlib/schema-change/contributors"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "phlib/db": "^2",
        "symfony/process": "^5 || ^6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\SchemaChange\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\SchemaChange\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
